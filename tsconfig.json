{
  "compilerOptions": {
    "target": "es2021",
    "lib": ["ES2021"],
    "module": "ESNext",
    "outDir": "./out",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true
  },
  "ts-node": {
    "pretty": true
  },
  "include": ["src/**/*"],
  "exclude": ["src/test.ts"]
}
