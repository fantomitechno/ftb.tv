{
  "compilerOptions": {
    "target": "es2022",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true
  },
  "ts-node": {
    "pretty": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "src/test.ts"
  ]
}